{
  "name": "react-customize-token-input",
  "version": "2.3.0-beta.0",
  "description": "A react token (tag) input component. Allow customize data structure and Look & Feel",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "prepublish": "yarn run lint && yarn run test && yarn run build",
    "build": "yarn run build:clean && yarn run build:scss-types && yarn run build:webpack && yarn run build:examples",
    "build:clean": "rm -rf {lib,dist}/*",
    "build:scss-types": "typed-scss-modules src --nameFormat none --exportType default",
    "build:webpack": "webpack",
    "build:examples": "cd examples; webpack",
    "lint": "yarn run lint:eslint && yarn run lint:style",
    "lint:eslint": "eslint --max-warnings 0 --ext .jsx,.js,.tsx,.ts src examples",
    "lint:style": "stylelint --custom-syntax postcss-scss 'src/**/*.scss' --fix",
    "test": "jest --coverage",
    "dev": "cd examples; webpack && webpack serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:seawind543/react-token-input.git"
  },
  "author": "Mark Lin <marklin1106@gmail.com>",
  "homepage": "https://github.com/seawind543/react-token-input",
  "license": "MIT",
  "keywords": [
    "react",
    "token",
    "tag",
    "token input",
    "tag input",
    "preprocess",
    "inline edit",
    "customize",
    "customize data structure",
    "customize render"
  ],
  "peerDependencies": {
    "react": "^16.10.2 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "keydown-key": "^1.2.1",
    "react-input-autosize": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/eslint-plugin": "^7.17.7",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.6",
    "@types/react-input-autosize": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-webpack-plugin": "^3.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "mockdate": "^3.0.5",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.1",
    "postcss-preset-env": "^7.7.2",
    "prettier": "^2.7.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dev-utils": "^12.0.1",
    "react-dom": "^17.0.2",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "stylelint-webpack-plugin": "^3.3.0",
    "ts-loader": "^9.3.1",
    "typed-scss-modules": "^6.5.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
